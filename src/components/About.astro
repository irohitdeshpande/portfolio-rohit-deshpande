---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base md:text-lg text-neutral md:pr-5 text-justify leading-relaxed">{description}</p>
  </div>
</Section>
