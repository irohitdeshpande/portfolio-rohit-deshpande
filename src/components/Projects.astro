---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Projects" href="projects">
  <div class="flex flex-col gap-6 sm:gap-8 lg:gap-10">
    {projects.map(({ name, summary, image, linkPreview, linkSource, date = "", techStack = [] }, index) => (
      <div
        class="group w-full rounded-xl sm:rounded-2xl shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-1 hover:shadow-2xl bg-gradient-to-br from-white/10 to-white/5 fade-in-up"
        style={`animation-delay: ${index * 80}ms;`}
        data-fade-in-up
      >
        <div class="p-4 sm:p-6 md:p-8 lg:p-10 flex flex-col items-center">
          <h3 class="text-lg sm:text-xl lg:text-2xl font-bold project-title mb-3 sm:mb-4 leading-tight text-center">{name}</h3>
          <div class="flex flex-wrap justify-center gap-2 sm:gap-3 mb-4 sm:mb-5">
            {techStack.map((tech, i) => (
              <span class="text-xs sm:text-sm lg:text-base tech-badge px-2 sm:px-3 py-1 rounded">{tech}</span>
            ))}
          </div>
          <p class="text-sm sm:text-base lg:text-lg project-description mb-4 sm:mb-6 text-center leading-relaxed max-w-full sm:max-w-3xl lg:max-w-4xl px-2 sm:px-0">{summary}</p>
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 lg:gap-6 justify-center mb-4 sm:mb-6 w-full sm:w-auto">
            <a href={linkSource} target="_blank" class="inline-block rounded-full btn-source text-xs sm:text-sm lg:text-base font-semibold px-4 sm:px-5 lg:px-6 py-2 sm:py-2.5 shadow transition-colors text-center">Source Code</a>
            <a href={linkPreview} target="_blank" class="inline-block rounded-full btn-preview text-xs sm:text-sm lg:text-base font-semibold px-4 sm:px-5 lg:px-6 py-2 sm:py-2.5 shadow transition-colors text-center">Live Preview</a>
          </div>
          {image && (
            <div class="w-full flex justify-center">
              <Image
                class="w-full h-auto object-cover rounded-lg project-image"
                src={image}
                alt={name}
                width="1920"
                height="600"
              />
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</Section>

<script is:inline>
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      const cards = document.querySelectorAll('[data-fade-in-up]');
      const observer = new window.IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('in-view');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.15 });
      cards.forEach(card => observer.observe(card));
    });
  }
</script>
<style>
  /* Fade-in-up animation for project cards */
  .fade-in-up {
    opacity: 0;
    transform: translateY(32px);
    /* Only animate when .in-view is present */
  }
  .fade-in-up.in-view {
    animation: fadeInUp 0.7s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: none;
    }
  }

  /* Project card styling with theme support and mobile optimization */
  /* .project-card background removed; now using Tailwind bg-gradient for consistency with Education */
  /* .project-card:hover background removed; shadow handled by Tailwind */

  .project-title {
    color: var(--text-primary);
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    text-align: center;
  }

  .tech-badge {
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .tech-badge:hover {
    background-color: var(--text-primary);
    color: var(--bg-primary);
    transform: translateY(-2px);
  }

  .btn-source {
    background-color: var(--text-primary);
    color: var(--bg-primary);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-source:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    box-shadow: 0 8px 15px var(--shadow);
  }

  .btn-preview {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    border: 2px solid var(--text-primary);
    font-weight: 600;
    transition: all 0.3s ease;
  }


  .btn-preview:hover {
    background-color: var(--text-primary);
    color: var(--bg-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 15px var(--shadow);
  }


  /* Mobile-specific optimizations */
  @media (max-width: 640px) {
    .group.w-full {
      margin: 0 -1rem;
      border-radius: 1rem;
    }
    .project-description {
      text-align: left;
      padding: 0 0.5rem;
    }
    .btn-source,
    .btn-preview {
      min-height: 44px; /* Touch-friendly button height */
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .tech-badge {
      min-height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  /* Improve text rendering on mobile */
  @media (max-width: 768px) {
    .project-title,
    .project-description {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .project-card,
    .tech-badge,
    .btn-source,
    .btn-preview,

    
    .project-card:hover {
      transform: none !important;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .project-card {
      border-width: 1px;
    }
    
    .btn-source,
    .btn-preview {
      border-width: 2px;
    }
  }
</style>