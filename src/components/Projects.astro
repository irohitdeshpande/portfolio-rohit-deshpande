---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  <div class="flex flex-col gap-10">
    {projects.map(({ name, summary, image, linkPreview, linkSource, date = "", techStack = [] }, index) => (
      <div class="group w-full bg-white/5 border border-white/10 rounded-2xl shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-1 hover:shadow-2xl">
        <div class="p-10 flex flex-col items-center text-center animate-fade-in-up">
          <h3 class="text-3xl font-bold text-primary mb-4 leading-tight">{name}</h3>
          <div class="flex flex-wrap justify-center gap-3 mb-4">
            {techStack.map((tech, i) => (
              <span class="text-lg bg-white/10 text-white/80 px-3 py-1 rounded">{tech}</span>
            ))}
          </div>
          <p class="text-xl text-white/80 mb-6">{summary}</p>
          <div class="flex gap-8 justify-center mb-6">
            <a href={linkSource} target="_blank" class="text-lg text-primary/80 underline underline-offset-2 hover:text-primary/100 transition-colors px-2">Source</a>
            <a href={linkPreview} target="_blank" class="text-lg text-primary/80 underline underline-offset-2 hover:text-primary/100 transition-colors px-2">Preview</a>
          </div>
          {image && (
            <div class="w-full flex justify-center">
              <Image
                class="w-full h-auto object-cover rounded-lg border border-white/10 shadow-md group-hover:scale-105 transition-transform duration-300"
                src={image}
                alt={name}
                width="1920"
                height="600"
              />
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</Section>