---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {projects.map(({ name, summary, image, linkPreview, linkSource, date = "", techStack = [], tags = [] }, index) => (
    <div class="group">
      <div class={`relative p-4 sm:p-6 rounded-xl transition-all duration-200 ease-out ${date === "Present" ? 'bg-white/8 border border-primary/20' : 'bg-white/3 border border-white/5 hover:bg-white/5'}`}>
        <div class="flex flex-col gap-4 sm:gap-6">
          {/* Left Section: Text Content */}
          <div class="flex-1 min-w-0">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-3">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg md:w-xl font-semibold text-primary mb-1 leading-tight break-words">
                  {name}
                </h3>
                <span class="text-xs sm:text-sm font-normal text-white/70">{summary}</span>
              </div>
              <div class={`flex items-center gap-1.5 sm:gap-2 px-2.5 sm:px-3 py-1 sm:py-1.5 rounded-lg text-xs sm:text-sm font-medium ${date === "Present" ? 'bg-primary/10 text-primary border border-primary/20' : 'bg-white/5 text-white/60 border border-white/10'}`}>
                <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="whitespace-nowrap">{date || "N/A"}</span>
                {date === "Present" && (
                  <span class="ml-1 sm:ml-2 px-1.5 sm:px-2 py-0.5 bg-primary/20 text-primary text-xs rounded-full whitespace-nowrap">
                    Current
                  </span>
                )}
              </div>
            </div>
            <div class="flex flex-wrap gap-2 mb-3">
              {techStack.map((tech, i) => (
                <span class="text-xs sm:text-sm bg-white/10 text-white/80 px-2 py-1 rounded">{tech}</span>
              ))}
            </div>
            <div class="flex gap-4 text-white/80 text-xs sm:text-sm font-normal">
              <a href={linkSource} target="_blank" class="hover:text-primary hover:underline">Source</a>
              <a href={linkPreview} target="_blank" class="hover:text-primary hover:underline">Preview</a>
            </div>
            <div class="flex flex-wrap gap-2 mt-2">
              {tags.map((tag, i) => (
                <span class="text-xs sm:text-sm bg-blue-100/10 text-blue-300 px-2 py-1 rounded">{tag}</span>
              ))}
            </div>
          </div>
          {/* Image Section Below */}
          {image && (
            <div class="w-20 h-20 sm:w-24 sm:h-24 flex-shrink-0 mx-auto">
              <Image
                class="w-full h-full object-cover rounded-lg border border-white/10"
                src={image}
                alt={name}
                width="96"
                height="96"
              />
            </div>
          )}
        </div>
        {date === "Present" && (
          <div class="absolute top-3 sm:top-4 right-3 sm:right-4">
            <div class="w-1.5 sm:w-2 h-1.5 sm:h-2 bg-primary rounded-full opacity-60"></div>
          </div>
        )}
      </div>
      {index < projects.length - 1 && (
        <div class="flex justify-center mt-6 sm:mt-8">
          <div class="w-8 sm:w-12 h-px bg-white/10"></div>
        </div>
      )}
    </div>
  ))}
</Section>