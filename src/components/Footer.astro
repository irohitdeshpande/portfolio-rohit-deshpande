---
import type { SiteConfig } from "@types";

type Props = Pick<SiteConfig, "author" | "socialLinks">;

const { author, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer
  class="w-full footer-container px-5 pt-5 pb-8 text-center"
>
  <ul class="mb-5 flex flex-wrap justify-center gap-x-5 text-xs">
    {
      socialLinks.map(({ text, href }) => (
        <li>
          <a
            href={href}
            target="_blank"
            class="inline-block px-4 py-3 footer-link after:relative after:bottom-[-4px] after:content-[url(/external.svg)] hover:text-primary"
          >
            {text}
          </a>
        </li>
      ))
    }
  </ul>
  <p class="text-xs footer-text">
    {author} Â© {currentYear}. <span class="footer-credit"
      >Designed & Developed by</span
    > Rohit Deshpande
  </p>
</footer>

<style>
  .footer-container {
    border-top: 1px solid var(--border-color);
  }

  .footer-link {
    color: var(--text-primary);
  }

  .footer-text {
    color: var(--text-primary);
  }

  .footer-credit {
    color: var(--text-neutral);
  }
</style>
