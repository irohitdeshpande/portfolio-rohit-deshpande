---
import Section from "./Section.astro";
import type { EducationProps } from "@types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
const displayEducation = education;
---

<Section text="Education" href="education">
  <div class="space-y-10">

    {displayEducation[0] && (
      <div class="group">
        <div class={`relative p-6 sm:p-8 rounded-2xl transition-all duration-300 ease-out shadow-lg bg-gradient-to-br from-primary/10 to-white/5 border border-primary/30`}>
          {/* Top Section: All Text Content */}
          <div class="flex flex-col gap-4 mb-4">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
              <div>
                <h3 class="text-2xl font-bold text-white mb-2 leading-tight tracking-tight">
                  {displayEducation[0].institution}
                </h3>
                <h4 class="text-lg font-medium text-primary">
                  {displayEducation[0].degree}
                </h4>
              </div>
              <div class="flex flex-row items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium bg-primary/15 text-primary border border-primary/25">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="whitespace-nowrap">{displayEducation[0].startDate} — {displayEducation[0].endDate}</span>
              </div>
            </div>
            {displayEducation[0].grade && (
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center bg-primary/20">
                  <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-xs text-white/50 uppercase tracking-wider font-medium">Grade</div>
                  <div class="font-semibold text-base text-primary">
                    {displayEducation[0].grade}
                  </div>
                </div>
              </div>
            )}
          </div>
          {displayEducation[0].image && (
            <div class="w-full">
              <img
                class="w-full aspect-video object-cover rounded-lg transition-transform duration-300 group-hover:scale-[1.02]"
                style="max-height: 350px;"
                src={displayEducation[0].image}
                alt={displayEducation[0].institution}
                width="800"
                height="220"
              />
            </div>
          )}
        </div>
      </div>
    )}
  
    <div class="flex flex-col md:flex-row gap-6">
      {displayEducation.slice(1, 3).map((edu, idx) => (
        <div class="group flex-1">
          <div class={`relative p-5 sm:p-6 rounded-2xl transition-all duration-300 ease-out shadow-lg bg-white/5 border border-white/10 hover:bg-white/10 hover:shadow-xl`}>
            <div class="flex flex-col gap-3 mb-3">
              <div class="flex flex-col gap-1">
                <h3 class="text-xl font-bold text-white leading-tight tracking-tight">
                  {edu.institution}
                </h3>
                <h4 class="text-base font-medium text-white/80">
                  {edu.degree}
                </h4>
              </div>
              <div class="flex flex-row items-center gap-2 px-3 py-1 rounded-lg text-xs font-medium bg-white/10 text-white/70 border border-white/15">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="whitespace-nowrap">{edu.startDate} — {edu.endDate}</span>
              </div>
              {edu.grade && (
                <div class="flex items-center gap-2 mt-1">
                  <div class="w-8 h-8 rounded-lg flex items-center justify-center bg-white/10">
                    <svg class="w-4 h-4 text-white/60" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-[10px] text-white/50 uppercase tracking-wider font-medium">Grade</div>
                    <div class="font-semibold text-sm text-white/90">
                      {edu.grade}
                    </div>
                  </div>
                </div>
              )}
            </div>
            {edu.image && (
              <div class="w-full">
                <img
                  class="w-full aspect-video object-cover rounded-lg transition-transform duration-300 group-hover:scale-[1.02]"
                  style="max-height: 200px;"
                  src={edu.image}
                  alt={edu.institution}
                  width="400"
                  height="120"
                />
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</Section>