---
import Section from "./Section.astro";
import type { EducationProps } from "@types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
const displayEducation = education;
---

<Section text="Education" href="education">
  <div class="space-y-12">
    {displayEducation.map(({ institution, degree, grade, startDate, endDate, image }, index) => {
      const isCurrent = endDate === "2026";
      return (
        <div class="group">
          <div class={`relative p-6 sm:p-8 rounded-2xl transition-all duration-300 ease-out shadow-lg ${isCurrent ? 'bg-gradient-to-br from-primary/10 to-white/5 border border-primary/30' : 'bg-white/5 border border-white/10 hover:bg-white/10 hover:shadow-xl'}`}>
            {/* Top Section: All Text Content */}
            <div class="flex flex-col gap-6 mb-6">
              {/* Header and Timeline Row */}
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
                <div>
                  <h3 class="text-2xl font-bold text-white mb-2 leading-tight tracking-tight">
                    {institution}
                  </h3>
                  <h4 class={`text-lg font-medium ${isCurrent ? 'text-primary' : 'text-white/80'}`}>
                    {degree}
                  </h4>
                </div>
                {/* Timeline Badge */}
                <div class={`flex flex-row items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium ${isCurrent ? 'bg-primary/15 text-primary border border-primary/25' : 'bg-white/10 text-white/70 border border-white/15'}`}>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="whitespace-nowrap">{startDate} â€” {endDate}</span>
                </div>
              </div>
              {/* Grade Section */}
              {grade && (
                <div class="flex items-center gap-4">
                  <div class={`w-10 h-10 rounded-lg flex items-center justify-center ${isCurrent ? 'bg-primary/20' : 'bg-white/10'}`}>
                    <svg class={`w-5 h-5 ${isCurrent ? 'text-primary' : 'text-white/60'}`} fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-xs text-white/50 uppercase tracking-wider font-medium">Grade</div>
                    <div class={`font-semibold text-base ${isCurrent ? 'text-primary' : 'text-white/90'}`}>
                      {grade}
                    </div>
                  </div>
                </div>
              )}
            </div>
            {/* Image Section: Full Width */}
            {image && (
              <div class="w-full">
                <img
                    class="w-full aspect-video object-cover rounded-lg transition-transform duration-300 group-hover:scale-[1.02]"
                    style="max-height: 400px;"
                  src={image}
                  alt={institution}
                  width="800"
                  height="400"
                />
              </div>
            )}
          </div>
          {/* Subtle Separator */}
          {index < displayEducation.length - 1 && (
            <div class="flex justify-center mt-12">
              <div class="w-16 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
            </div>
          )}
        </div>
      );
    })}
  </div>
</Section>