---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<section id={href} class="py-24 px-8 w-full">
  <h2
    class="mb-14 font-serif text-4xl font-bold tracking-tighter text-white md:text-5xl"
  >
    {text}
  </h2>
  <div class="w-full">
    <slot />
  </div>
</section>